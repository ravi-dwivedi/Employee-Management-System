<Window x:Class="Nagarro.EmployeePortal.Wpf.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="LoginWindow" Height="200" Width="350" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <TextBox Height="23" Margin="117,35,23,0" Name="usernameTextBox" VerticalAlignment="Top" TabIndex="0" />
        <PasswordBox Height="23" Margin="117,75,23,0" Name="passwordTextBox" VerticalAlignment="Top" TabIndex="1" />
        <Button IsDefault="True" Height="23" Margin="0,0,23,12" Name="button1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="loginButton_Click" TabIndex="3">_Login</Button>
        <Button IsCancel="True" Height="23" Margin="0,0,103,12" Name="button2" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="cancelButton_Click" TabIndex="2">_Cancel</Button>
        <Label Height="28" HorizontalAlignment="Left" Margin="12,33,0,0" Name="label1" VerticalAlignment="Top" Width="99">Username</Label>
        <Label HorizontalAlignment="Left" Margin="12,73,0,0" Name="label2" Width="99" Height="28" VerticalAlignment="Top">Password</Label>
    </Grid>
</Window>
